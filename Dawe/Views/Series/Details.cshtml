@model Dawe.Models.Series
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr class="mt-3 mb-5" />
<div class="row">
    <div class="col-lg-4 mb-3">
        <div class="d-flex justify-content-center">
            <img class="border rounded-3 p-2" src="data:image/*;base64,@(Convert.ToBase64String(Model.Thumbnail))" />
        </div>
    </div>
    <div class="col-lg-8 mb-3 border rounded-3 p-3">
        <p>@Html.DisplayFor(m => Model.Description)</p>
    </div>
</div>

@foreach(var season in Model.Seasons)
{
    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var episode in season.Episodes)
        {
            <tr style="cursor: pointer;" onclick="window.location.href = '/Series/WatchEpisode/@episode.episodeId'">
                <th scope="row">@Html.DisplayFor(number => episode.episodeNumber)</th>
                <td>@Html.DisplayFor(number => episode.name)</td>
            </tr>
        }
    </tbody>
</table>
}
