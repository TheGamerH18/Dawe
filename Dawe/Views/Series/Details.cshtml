@model Dawe.Models.Series
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-4">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Thumbnail))" />
    </div>
    <div class="col-6">
        <h3>@Html.DisplayFor(m => Model.Name)</h3>
        <p>@Html.DisplayFor(m => Model.Description)</p>
    </div>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var episode in Model.Episodes)
        {
            <tr style="cursor: pointer;" onclick="window.location.href = '/Series/WatchEpisode/@episode.episodeId'">
                <th scope="row">@Html.DisplayFor(number => episode.episodeNumber)</th>
                <td>@Html.DisplayFor(number => episode.name)</td>
            </tr>
        }
    </tbody>
</table>