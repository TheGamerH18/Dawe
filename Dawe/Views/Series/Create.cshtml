@model Dawe.Controllers.SeriesController.UploadModel
@{
    ViewData["Title"] = "Create Series";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1> 

<hr />
<div class="row mt-4">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="@nameof(Model.Name)" />
                <label asp-for="Name" class="control-label" ></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control" placeholder="@nameof(Model.Description)"></textarea>
                <label asp-for="Description" class="control-label"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Year" class="form-control" placeholder="@nameof(Model.Year)" />
                <label asp-for="Year"></label>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                @Html.DropDownListFor(x => x.SelectedCategory, new SelectList(Model.Categorys, "Value", "Text"), htmlAttributes: new { @class = "form-select", id = "Category"})
                <label for="Category">category</label>
                @Html.ValidationMessageFor(x => x.SelectedCategory, "", new { @class = "text-danger"})
            </div>
            <div class="form-group mb-3">
                <label asp-for="CoverFile" class="control-label"></label>
                <input asp-for="CoverFile" class="form-control" />
                <span asp-validation-for="CoverFile" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="/Series/" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}