@model Dawe.Controllers.ShowController.EpisodeEditModel
@{
    ViewData["Title"] = "Add Episode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <form asp-action="EditEpisode">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="id" />
        <div class="form-group">
            <label asp-for="EpisodeNumber" class="control-label"></label>
            <input asp-for="EpisodeNumber" class="form-control" />
            <span asp-validation-for="EpisodeNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
