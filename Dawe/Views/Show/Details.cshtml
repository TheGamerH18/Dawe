@model Dawe.Models.Show
@{
    ViewData["Title"] = "Details";
    Layout = "~/View/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var show in Model.Episodes)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(number => show.episodeNumber)</th>
                <td>@Html.DisplayFor(number => show.name)</td>
            </tr>
        }
    </tbody>
</table>