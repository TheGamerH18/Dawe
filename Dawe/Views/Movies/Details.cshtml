@model Dawe.Models.Movies

@{
    ViewData["Title"] = "Watch " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>
        @Html.DisplayFor(model => model.Name)
    </h4>
    <hr />
    <dl class="row">
        <div class="ratio ratio-16x9">
            <video id="videoplayer" class="video-js vjs-theme-forest" data-setup="{}" controls>
                <source src="/Movies/Movie/@Model.Id" type="video/mp4" />
            </video>
        </div>
    </dl>
</div>

@section Addons{
    <link href="https://vjs.zencdn.net/7.18.1/video-js.css" rel="stylesheet" />
    <link href="https://unpkg.com/@@videojs/themes@1/dist/forest/index.css" rel="stylesheet">
}

@section Scripts{
    <script src="https://vjs.zencdn.net/7.18.1/video.min.js"></script>
    <script src="https://cdn.sc.gl/videojs-hotkeys/latest/videojs.hotkeys.min.js"></script>
    <script>
        videojs('videoplayer').ready(function() {
            this.hotkeys({});
        });
    </script>
}